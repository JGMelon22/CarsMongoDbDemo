@model IEnumerable<CarsMongoDbDemo.ViewModels.XlsxFile.XlsxFileViewModel>

<h4 class="text-info">Excel Reports</h4>
<div>
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>
                @Html.DisplayName("File Name")
            </th>
            <th class="text-center">
                Options
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @* @Html.DisplayFor(modelItem => item.XlsxFileName) *@
                    @($"{item.XlsxFileName.ToUpperInvariant()}")
                </td>
                <td class="text-center">
                    @Html.ActionLink("Delete", "DeleteFile", new { fileName = item.XlsxFileName }, new { @class = "button fs-6 btn-sm btn-danger border-danger border-1 rounded m-1", onclick = "return confirm('Confirm delete this item?')" })
                    @Html.ActionLink("Download", "DownloadFile", new { fileName = item.XlsxFileName }, new { @class = "button fs-6 btn-sm btn-success border-success border-1 rounded", id = "DownloadFileButton" })
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>