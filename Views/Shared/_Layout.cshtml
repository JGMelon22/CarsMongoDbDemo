<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - CarsMongoDbDemo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/darkly.min.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/CarsMongoDbDemo.styles.css" asp-append-version="true"/>
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand border border-1 rounded-1 text-center" asp-area="" asp-controller="Home" asp-action="Index">CarsMongoDbDemo<img src="Content/Images/MongoDB_logo.png" width="10%" alt=""/></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle bg-light border-1 border-primary rounded-1" style="color: white;" data-bs-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Cars</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" asp-controller="Cars" asp-action="Index">List Cars</a>
                            <a class="dropdown-item" asp-controller="ExcelFiles" asp-action="Index">List Car Info Report</a>
                            <a class="dropdown-item" onclick="return confirm('Confirm delete this item?')" asp-controller="ExcelFiles" asp-action="CreateFile">Create Car Info Report</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" a:hov asp-controller="Cars" asp-action="Create">Add a new Car</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

@* Loading Spinner *@
<div class="d-flex justify-content-center h-100">
    <button id="LoadingButton" class="btn btn-lg btn-light disabled" style="display: none">
        <span class="spinner-border spinner-border-lg"></span>
    </button>
</div>


<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2023 - CarsMongoDbDemo - <a href="https://github.com/JGMelon22/CarsMongoDbDemo">Repository</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", false)
</body>
</html>