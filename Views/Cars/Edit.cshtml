@model CarsMongoDbDemo.ViewModels.Car.GetCarViewModel

<h4 class="text-info">Edit Car info</h4>
<hr/>
<div class="row">
    <div class="row-md-4"></div>
    <form asp-action="Edit">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="Id"/>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control w-50"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="VehicleBrand" class="control-label">Vehicle Brand</label>
            <input asp-for="VehicleBrand" class="form-control w-50"/>
            <span asp-validation-for="VehicleBrand" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" type="number" class="form-control w-25"/>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <h4></h4>
        <div class="form-group">
            <input type="submit" class="btn btn-info rounded-1 mb-1" value="Edit"/>
            <a class="btn btn-primary border-1" asp-action="Index">Return to Index</a>
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}