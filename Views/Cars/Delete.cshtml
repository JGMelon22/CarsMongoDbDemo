@model CarsMongoDbDemo.ViewModels.Car.CarResultViewModel

<h4 class="alert alert-dismissible alert-warning w-50">Are you sure you want to delete @Model.Name from database?</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Details">
            <div class="form-group">
                <label asp-for="Id" class="text-white fs-4">Id</label>
                <input class="form-control w-75" type="text" placeholder="@Html.DisplayFor(model => model.Id)" readonly>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="text-white fs-4">Name</label>
                <input class="form-control w-75" type="text" placeholder="@Html.DisplayFor(model => model.Name)" readonly>
            </div>
            <div class="form-group">
                <label asp-for="VehicleBrand" class="text-white fs-4">Vehicle Brand</label>
                <input class="form-control w-75" type="text" placeholder="@Html.DisplayFor(model => model.VehicleBrand)" readonly>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="text-white fs-4">Price</label>
                <input class="form-control w-50" type="text" placeholder="@($"{Model.Price:c}")" readonly>
            </div>
        </form>
    </div>
</div>
<h4></h4>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id"/>
    <button type="submit" class="btn btn-danger rounded-1 m-1"
            onclick="return confirm('Confirm delete this item?')">
        Delete
    </button>
    <a class="btn btn-primary border-1" asp-action="Index">Return to Index</a>
</form>