@model IEnumerable<CarsMongoDbDemo.ViewModels.Car.GetCarViewModel>

<div>
    <h3 class="text-info fst-italic">Cars List</h3> 
     <span class="text-light fs-5">Cars Quantity: @Model.Count()</span>
</div>

<br/>

<form asp-action="Index" method="get">
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.Id)
            </td>
            <td>
                @Html.DisplayName("Vehicle Brand")
            </td>
            <td>
                @Html.DisplayNameFor(model => model.Name)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.Price)
            </td>
        </tr>
        </thead>
        <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => car.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => car.VehicleBrand)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => car.Name)
                </td>
                @* <td>
                    @Html.DisplayFor(modelItem => car.Price)
                </td> *@
                <td>
                    @String.Format("{0:c}", car.Price)
                </td>
            </tr>
        }
        </tbody>
    </table>
</form>