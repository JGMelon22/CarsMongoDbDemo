@model CarsMongoDbDemo.ViewModels.Car.CarInputViewModel

<h3 class="text-success fst-normal">Add a new Car</h3>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control w-75"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehicleBrand" class="control-label">Vehicle Brand</label>
                <input asp-for="VehicleBrand" class="form-control w-75"/>
                <span asp-validation-for="VehicleBrand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" type="number" class="form-control w-50"/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h4>
                    <h6></h6>
                    <input type="submit" value="Create" class="btn btn-success border-1 rounded-1 m-1"/>
                    <a class="btn btn-primary border-1 rounded-1" asp-action="Index">Return to List</a>
                </h4>
            </div>
        </form>
    </div>
</div>

@* Model Validation via JS *@

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}